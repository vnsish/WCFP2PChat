<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="">
                    <serviceMetadata httpGetEnabled="false" httpsGetEnabled="false" />
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
      <bindings>
        
        <netTcpBinding>
          <binding name="Binding1">
            <security mode="None"/>
          </binding>
        </netTcpBinding>

        <netPeerTcpBinding>
          <binding  name="unsbinding">
            <security mode="None"/>
            <resolver mode="Pnrp"/>
          </binding>
          <binding name ="customresolverbinding">
            <security mode="None"/>
            <resolver mode="Custom">
              <custom address="net.tcp://localhost/ServiceModelSamples/peerResolverService" binding ="netTcpBinding" bindingConfiguration="Binding1"/>
            </resolver>
          </binding>
        </netPeerTcpBinding>
      </bindings>

      <services>
        <service name="System.ServiceModel.PeerResolvers.CustomPeerResolverService">
          <host>
            <baseAddresses>
              <add baseAddress="net.tcp://localhost/ChatService/peerResolverService"/>
            </baseAddresses>
          </host>
          <endpoint address="net.tcp://localhost/ServiceModelSamples/peerResolverService" binding="netTcpBinding" bindingConfiguration="Binding1" contract="System.ServiceModel.PeerResolvers.IPeerResolverContract"/>
        </service>
            <service name="WCFChatForms.ChatService">
                <endpoint name="P2PChatEndpoint" address="" binding="netPeerTcpBinding" bindingConfiguration="unsbinding" contract="WCFChatForms.IChatService">
                    <identity>
                        <dns value="localhost" />
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
                <host>
                    <baseAddresses>
                        <add baseAddress="net.p2p://ChatService/P2PChat" />
                    </baseAddresses>
                </host>
            </service>
        </services>

      <client>
        <endpoint name="P2PChatEndpointC" address="net.p2p://ChatService/P2PChat" binding="netPeerTcpBinding" bindingConfiguration="customresolverbinding" contract="WCFChatForms.IChatService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint name="CustomPeerResolverEndpoint"
          address="net.tcp://localhost/ServiceModelSamples/peerResolverService"
          binding="netTcpBinding"
          bindingConfiguration="Binding1">
        </endpoint>
      </client>
    </system.serviceModel>
</configuration>