<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="">
                    <serviceMetadata httpGetEnabled="false" httpsGetEnabled="false" />
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
      <bindings>
        <netPeerTcpBinding>
          <binding  name="unsbinding">
            <security mode="None"/>
            <resolver mode="Pnrp"/>
          </binding>
        </netPeerTcpBinding>
      </bindings>

      <services>
            <service name="WCFChatForms.ChatService">
                <endpoint name="P2PChatEndpoint" address="" binding="netPeerTcpBinding" bindingConfiguration="unsbinding" contract="WCFChatForms.IChatService">
                    <identity>
                        <dns value="localhost" />
                    </identity>
                </endpoint>
                <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
                <host>
                    <baseAddresses>
                        <add baseAddress="net.p2p://P2PChat" />
                    </baseAddresses>
                </host>
            </service>
        </services>

      <client>
        <endpoint name="P2PChatEndpointC" address="net.p2p://P2PChat" binding="netPeerTcpBinding" bindingConfiguration="unsbinding" contract="WCFChatForms.IChatService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
      </client>
    </system.serviceModel>
</configuration>